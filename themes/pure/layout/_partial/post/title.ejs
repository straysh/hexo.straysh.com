<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><% if(hasTag(post.tags, 'Translation')){ %><%- "<span style='color:#008e59;'>[译]</span>" %><% } %><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><% if(hasTag(post.tags, 'Translation')){ %><%- "<span style='color:#008e59;'>[译]</span>" %><% } %><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <% if(hasTag(post.tags, 'Translation')){ %><%- "<span style='color:#008e59;'>[译]</span>" %><% } %><%= post.title %>
    </h1>
  <% } %>
<% } %>
